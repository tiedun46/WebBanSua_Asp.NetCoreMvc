@model IEnumerable<WebBanSua.Models.RoleAccount>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0">
              <h4>Quản Lý Quyền Truy Cập</h4>
                   <p>
</p>
            </div>
       
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center justify-content-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Role Name</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Mô Tả Quyền Truy Cập</th>
                      <th></th>
                    </tr>
                  </thead>
                  
                  <tbody>
        @foreach (var item in Model) {
                    <tr>
                      <td>
                        <div class="d-flex px-2">
                          <div class="my-auto">
                            <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.RoleId) </h6>
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-sm font-weight-bold mb-0">@Html.DisplayFor(modelItem => item.RoleName)</p>
                      </td>
                      <td>
                        <p class="text-sm font-weight-bold mb-0"> @Html.DisplayFor(modelItem => item.Mota)</p>
                      </td>
                                        
                    </tr>
                    }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>